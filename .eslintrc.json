{
  "extends": "standard",
  "rules": {
    "valid-typeof": ["off"],
    "no-unused-expressions": ["off"],
    "indent": ["off"],
    "space-before-function-paren": ["off"],
    "quotes": ["off"],
    "eqeqeq": ["off"],
    "padded-blocks": ["off"],
    "semi": ["off"]
  },
  "globals": {
    "GM_getValue": true,
    "GM_registerMenuCommand": true,
    "GM_setValue": true
  },
  "env": {
    "mocha": true 
  }
}
